<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="12dp">

    <kr.edcan.eva.RoundImageView
        android:id="@+id/finding_listview_profileImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:src="@android:drawable/btn_plus" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/finding_listview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오준석"
            android:textColor="#FFF"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/finding_listview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="바로 근처에 있음 바로 거래 가능"
            android:textColor="@color/textSubTransparentColor"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>